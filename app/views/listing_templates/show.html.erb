<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Listing #<%= @listing.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/listings" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link listing start -->
      <div class="col">
        <a href="/listings/<%= @listing.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit listing
        </a>
      </div>
      <!-- Edit link listing end -->

      <!-- Delete link listing start -->
      <div class="col">
        <a href="/delete_listing/<%= @listing.id %>" class="btn btn-block btn-outline-secondary">
          Delete listing
        </a>
      </div>
      <!-- Delete link listing end -->
    </div>

    <dl>
      <dt>
        Lister
      </dt>
      <!-- Display lister start -->
      <dd>
        <%= @listing.lister %>
      </dd>
      <!-- Display lister end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@listing.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@listing.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

